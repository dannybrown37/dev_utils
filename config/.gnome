# Copy last input and output to clipboard


# Copy last input and output to clipboard
PROMPT_COMMAND='
  history -a;
  last_cmd=$(history 1 | sed "s/^ *[0-9]* *//");
  last_output=$(fc -ln -0 | tee /tmp/last_output.txt | tail -n +2);
  echo -e "Input:\n$last_cmd\n\nOutput:\n$(cat /tmp/last_output.txt)" | wl-copy
'
