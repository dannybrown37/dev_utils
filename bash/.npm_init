#! /bin/bash

# install global NPM packages and set global NPM congifurations

curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
nvm install 18
nvm use 18

packages=(
    git-open
    typescript
    ts-node
    fast-pr
)

for package in "${packages[@]}"; do
    npm install --global $package
done

# store currently unwanted npm commands here for reference/later use
not_current_but_past=(
    npm install --global serverless

    npm config set init-author-name "$MY_NAME"
    npm config set init-author-email "$MY_EMAIL"
    npm config set init-author-url "$MY_GITHUB"
    npm config set init-license "MIT"
    npm config set init-version "0.0.1"
)
