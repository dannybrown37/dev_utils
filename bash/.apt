#!/bin/bash

apt_packages=(
    bash-completion
    build-essential
    curl
    fzf
    jq
    libbz2-dev
    libffi-dev
    liblzma-dev
    libncurses5-dev
    libncursesw5-dev
    libreadline-dev
    libssl-dev
    libsqlite3-dev
    llvm
    lzma-dev
    make
    man-db
    nodejs
    tk-dev
    wget
    xz-utils
    zlib1g-dev
)

for package in "${apt_packages[@]}"; do
    if ! dpkg -s "$package" >/dev/null 2>&1; then
        sudo apt install -y "$package"
    fi
done

sudo apt update
