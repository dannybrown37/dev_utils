#!/bin/bash

apt_packages=(
    bash-completion
    curl
    fzf
    git
    httpie
    jq
    man-db
    neofetch
    nodejs
    npm
    rename
)

pyenv_depencies=(
    build-essential
    libbz2-dev
    libffi-dev
    liblzma-dev
    libncurses5-dev
    libncursesw5-dev
    libreadline-dev
    libssl-dev
    libsqlite3-dev
    llvm
    lzma-dev
    make
    tk-dev
    wget
    xz-utils
    zlib1g-dev
)

sudo apt update

for package in "${apt_packages[@]}"; do
    if ! dpkg -s "$package" >/dev/null 2>&1; then
        sudo apt install -y "$package"
    fi
done

for package in "${pyenv_depencies[@]}"; do
    if ! dpkg -s "$package" >/dev/null 2>&1; then
        sudo apt install -y "$package"
    fi
done
